<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% if @range == "User" %>
  <tbody>  
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>  
        <td><%= user.title %></td>
        <td><%= user.body %></td> 
      </tr>
    <% end %>
  <% else %>  
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag(book, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td> 
        <td><%= book.title %></td>
        <td><%= book.body %></td> 
      </tr>
    <% end %>  
  </tbody>
  <% end %>  
</table>