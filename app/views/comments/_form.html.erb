<table>
  <% book.book_comments.each do |book_comment| %>
          <tr>
            <td><%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg" %><br>
            <%= book_comment.user.name %></td>
            <td><%= book_comment.comment %></td>
                <% if book_comment.user == current_user %>
                  <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %></td>
              <% end %>
          </tr>
        <% end %>
</table>
<%= form_with(model:[book, book_comment], url: book_book_comments_path(book)) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに", size: "100x5" %><br>
            <%= f.submit "送信" %>
          <% end %>